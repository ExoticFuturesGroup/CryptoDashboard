# CryptoDashboard Environment Variables

# CoinGecko API (optional - app uses mock data by default)
# Get your free API key at https://www.coingecko.com/en/api
# NEXT_PUBLIC_COINGECKO_API_KEY=your_api_key_here

# DeFi Llama API (optional - app uses mock data by default)
# NEXT_PUBLIC_DEFILLAMA_API_URL=https://api.llama.fi

# Exchange APIs (optional - app uses mock data by default)
# NEXT_PUBLIC_BINANCE_API_URL=https://api.binance.com
# NEXT_PUBLIC_COINBASE_API_URL=https://api.coinbase.com

# Prediction Settings
NEXT_PUBLIC_PREDICTION_INTERVAL_MINUTES=3
NEXT_PUBLIC_PREDICTION_HORIZON_HOURS=1
NEXT_PUBLIC_CONFIDENCE_LEVEL=0.95
NEXT_PUBLIC_INITIAL_MARGIN=1050

# Refresh Settings
NEXT_PUBLIC_AUTO_REFRESH_INTERVAL_MS=60000
